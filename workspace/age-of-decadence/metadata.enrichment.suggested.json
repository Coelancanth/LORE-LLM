{
  "pathPatternRules": [
    {
      "glob": "**/scripts/data/core/**",
      "metadata": {
        "category": "item",
        "sourceGroup": "core"
      }
    },
    {
      "glob": "**/scripts/data/journal/**",
      "metadata": {
        "category": "journal",
        "sourceGroup": "journal"
      }
    },
    {
      "glob": "**/scripts/data/slides/**",
      "metadata": {
        "category": "slide",
        "sourceGroup": "slides"
      }
    },
    {
      "glob": "**/scripts/data/text/dialogues/**",
      "metadata": {
        "category": "dialogue",
        "sourceGroup": "text.dialogues"
      }
    }
  ],
  "fileRegexRules": [
    {
      "pattern": ".*/scripts/data/text/dialogues/(?<prefix>[^/_]+)_.+\\.xml\\.json$",
      "metadata": {
        "dialoguePrefix": "${prefix}"
      }
    },
    {
      "pattern": ".*/scripts/data/text/dialogues/(?<prefix>[^/_]+)_NPC_(?<npc>[^._]+).*\\.xml\\.json$",
      "metadata": {
        "dialoguePrefix": "${prefix}",
        "npcName": "${npc}"
      }
    },
    {
      "pattern": ".*/scripts/data/text/dialogues/(?<file>[^/]+)\\.xml\\.json$",
      "metadata": {
        "dialogueFile": "${file}"
      }
    },
    {
      "pattern": ".*/scripts/data/slides/(?<slide>[^.]+)\\.english\\.cs\\.json$",
      "metadata": {
        "slideId": "${slide}"
      }
    },
    {
      "pattern": ".*/scripts/data/core/(?<file>[^.]+)\\.xml\\.json$",
      "metadata": {
        "itemSheet": "${file}"
      }
    }
  ],
  "prefixRules": [
