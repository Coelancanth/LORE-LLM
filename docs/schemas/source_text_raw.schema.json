{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SourceTextRawDocument",
  "type": "object",
  "required": [
    "sourcePath",
    "generatedAt",
    "project",
    "projectDisplayName",
    "inputHash",
    "segments"
  ],
  "properties": {
    "sourcePath": { "type": "string" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "project": { "type": "string" },
    "projectDisplayName": { "type": "string" },
    "inputHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "text", "isEmpty", "lineNumber"],
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string" },
          "isEmpty": { "type": "boolean" },
          "lineNumber": { "type": "integer", "minimum": 1 },
          "metadata": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}


