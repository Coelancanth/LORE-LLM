{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ClusterDocument",
  "type": "object",
  "required": ["project", "projectDisplayName", "generatedAt", "sourceTextHash", "clusters"],
  "properties": {
    "project": {"type": "string"},
    "projectDisplayName": {"type": "string"},
    "generatedAt": {"type": "string", "format": "date-time"},
    "sourceTextHash": {"type": "string"},
    "clusters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["clusterId", "memberIds"],
        "properties": {
          "clusterId": {"type": "string"},
          "memberIds": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          },
          "sharedContext": {
            "type": "array",
            "items": {"type": "string"}
          },
          "knowledgeReferences": {
            "type": "array",
            "items": {"type": "string"}
          },
          "confidence": {"type": "number"},
          "notes": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
